<%if @errors%>
<ul>
  <%@errors.each do |error|%>
  <li><%=error%></li>
    <%end%>
  </ul>
  <%end%>

<div class="question-form">
  <h1 class="new-question-header">Tell Us Your Plan To Take Down The Man</h1>
  <form method='post' action='/questions'>
    <label for="title">Title:</label>
    <input class="question-text" type='text' name="title" placeholder="Question"><br>
    <textarea class="question-content" id="question-content" name="content"></textarea><br>
    <input class="tags-text" type='text' name="tags" placeholder="tag1, tag2, tag3, tag4...">
    <input class="question-button" type="submit" value="Create">
  </form>
</div>
